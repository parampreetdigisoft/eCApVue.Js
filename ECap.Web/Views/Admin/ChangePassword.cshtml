@using ECap.Web.Models;
@model ChangePasswordViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Username & Password";
}

 <div id="ChangePwdApp">
   <form v-on:submit.prevent="submitRequest">
      <div class="row">
         <div class="col-6">
            <div class="mb-3">
               <label for="Password" class="form-label">Set New Password:</label>
               <div class="position-relative auth-pass-inputgroup mb-3">
                 <input placeholder="Enter your Password" type="password" v-model="password" v-on:keydown="blurEventHandler()" id="password-input" class="form-control pe-5">
                 <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted" type="button" id="password-addon" v-on:click="showPassword"><i class="ri-eye-fill align-middle"></i></button>
                <div class="text-danger" v-if="modelState['Password'] !== undefined"><strong><span class="k-icon k-i-warning">{{ modelState['Password'] }}</span></strong></div>
               </div>
              

           
           </div>
         </div>
         <!--end col-->
      </div>
      <div class="row">
         <div class="col-6">
            <div class="mb-3">
               <label for="ConfirmPassword" class="form-label">Confirm New Password:</label>
                 <div class="position-relative auth-pass-inputgroup mb-3">
                 <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted" type="button" id="password-addon-confirm" v-on:click="showPasswordConfirm"><i class="ri-eye-fill align-middle"></i></button>
                <input placeholder="Confirm your Password" type="password" v-model="confirmPassword" v-on:keydown="blurEventHandler()" id="password-input-confirm" class="form-control pe-5">
               <div class="text-danger" v-if="modelState['ConfirmPassword'] !== undefined"><strong><span class="k-icon k-i-warning">{{ modelState['ConfirmPassword'] }}</span> </strong></div>
               </div>
               
              <div class="text-danger" v-if="modelState['ConfirmPassword'] !== undefined"><strong><span class="k-icon k-i-warning">{{ modelState['Password'] }}</span></strong></div>
              <div class="">
                <div class="mb-3">
                      <div class="text-success" v-if="message != ''"><strong>{{message}}</strong></div>
                 </div>
              </div>
            </div>
         </div>
         <!--end col-->
      </div>
      <div class="row">
         <div class="col-md-3  ">
            
               <button type="submit" class="btn btn-primary">Save</button>
            
         </div>
         <!--end col-->
      </div>
      <!--end row-->
   </form>
</div>

@section scripts{
    <script src="~/js/ChangePassword.js"></script>
}
