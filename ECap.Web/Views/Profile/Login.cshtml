@using ECap.Web.Models;
@model LoginViewModel

@{
    Layout = null;
    string culture = "en-US";
    if(Context.Request.Cookies["Culture"]!=null)
    {
        culture= Convert.ToString(Context.Request.Cookies["Culture"]);
    }
}

<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg" data-sidebar-image="none">

<head>

    <meta charset="utf-8" />
    <title>E-CAP | Sign In</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="E-CAP" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="/assets/images/favicon.ico">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Layout config Js -->
    <script src="/assets/js/layout.js"></script>
    <!-- Bootstrap Css -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="/assets/css/app.min.css" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="/assets/css/custom.min.css" rel="stylesheet" type="text/css" />

</head>

<body>
    <div class="auth-page-wrapper pt-5">
        <!-- auth page bg -->
        <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
            <!--Select Dropdown-->
                 <div class="dropdown" id="LanguageSection" style="float: right;z-index: 9;padding: 10px;width: 170px;max-width: 100%;">
                  <select class="input-txt-smp pad2 form-control" id="ddlLanguage" v-on:change="selectedvalue()" style="appearance: auto;">
                     <option v-for="lang in languages" v-bind:value="lang.id">
                         {{lang.Name }}
                     </option>
                   </select>
                </div>
                <!--End-->
            <div class="bg-overlay"></div>

            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                    <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                </svg>
            </div>
        </div>

        <!-- auth page content -->
        <div class="auth-page-content">
            <div class="container">
                 
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <div>
                                <a href="index.html" class="d-inline-block auth-logo">
                                    <img src="/assets/images/logo-light.png" alt="" height="20">
                                </a>
                            </div>
                            @*<p class="mt-3 fs-15 fw-medium">Premium Admin & Dashboard Template</p>*@
                        </div>
                    </div>
                </div>
                <!-- end row -->
               

                <div id="loginForm" class="row justify-content-center">
                   
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card mt-4">
                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5 class="text-primary">@Html.Raw(_helper.GetResource("Welcome Back",culture))</h5>
                                    <p class="text-muted">@Html.Raw(_helper.GetResource("Sign_In Continue",culture))</p>
                                </div>

                                <div class="p-2 mt-4">
                                    <form v-on:submit.prevent="loginConfirm">
                                        <div class="mb-3">
                                            <label for="username" class="form-label">@Html.Raw(_helper.GetResource("Login_User_Name",culture))</label>
                                            <input type="hidden" v-model="returnURL" >
                                            <input type="text" v-on:keydown="blurEventHandler()" class="form-control" v-model="username" placeholder="@Html.Raw(_helper.GetResource("Login_Enter username",culture))">
                                            <div class="text-danger" v-if="modelState['UserName'] !== undefined"><strong><span class="k-icon k-i-warning"></span> @*{{ modelState['UserName'] }}*@ @Html.Raw(_helper.GetResource("Login_Username_Validation",culture)) </strong></div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="password-input">@Html.Raw(_helper.GetResource("Login_Password",culture))</label>
                                            <div class="position-relative auth-pass-inputgroup mb-3">
                                                <input type="password" v-on:keydown="blurEventHandler()" class="form-control pe-5" id="password-input" v-model="password" placeholder="@Html.Raw(_helper.GetResource("Login_Enter password",culture))">
                                                <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted" type="button" id="password-addon" v-on:click="showPassword"><i class="ri-eye-fill align-middle"></i></button>
                                            </div>
                                            <div class="text-danger" v-if="modelState['Password'] !== undefined"><strong><span class="k-icon k-i-warning"></span>@Html.Raw(_helper.GetResource("Login_Password_Validation",culture))</strong></div>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="rememberMe" value="rememberMe" v-model="rememberMe" id="auth-remember-check">
                                            <label class="form-check-label" for="auth-remember-check">@Html.Raw(_helper.GetResource("Login_Remember me",culture))</label>
                                        </div>
                                        <div class="mb-3">
                                            <div class="text-danger" v-if="message != ''"><strong>@Html.Raw(_helper.GetResource("Login_Invalid_Message",culture))</strong></div>
                                          </div>
                                          <div class="mt-4">
                                            <button class="btn btn-success w-100" type="submit">@Html.Raw(_helper.GetResource("Login_Sign In",culture))</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- end card body -->
                        </div>
                        <!-- end card -->
                    </div>

                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->
        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                &copy;
                                <script>document.write(new Date().getFullYear())</script> Executive Voice, LLC
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Footer -->
    </div>
    <!-- end auth-page-wrapper -->
    <!-- JAVASCRIPT -->
    <script>
      $(document).ready(function() {
        $("#ddlLanguage").val('@culture')
      })
        </script>
    <script src="/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="/assets/libs/node-waves/waves.min.js"></script>
    <script src="/assets/libs/feather-icons/feather.min.js"></script>
    <script src="/assets/js/pages/plugins/lord-icon-2.1.0.js"></script>
    <script src="/assets/js/plugins.js"></script>

    <!-- particles js -->
    <script src="/assets/libs/particles.js/particles.js"></script>
    <!-- particles app js -->
    <script src="/assets/js/pages/particles.app.js"></script>
    <!-- vue js -->
    <script src="~/js/vue/vue.min.js"></script>
    <script src="~/js/login.js"></script>
    <script src="~/js/LanguageDropdown.js"></script>
</body>

</html>



